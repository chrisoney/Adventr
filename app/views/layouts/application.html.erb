      window.splashFourImageOne = "<%= image_url('splash_4_image_1.png') %>";
      window.splashFourImageTwo = "<%= image_url('splash_4_image_2.png') %>";
      window.fancyAImage = "<%= image_url('fancy-a.png') %>";
      window.swordImage = "<%= image_url('vector/sword.svg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
